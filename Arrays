Ques 2) TO FIND MIN MAX IN A GIVEN ARRAY

#include <iostream>
#include<climits>
using namespace std;

int main()
{
    int n,i;
    int arr[n];
    cin>>n;
    for(i=0;i<n;i++){
        cin>>arr[i];
    }
    int maxNo= INT_MIN;
    int minNo= INT_MAX;
    for(i=0;i<n;i++){
        if(arr[i]>maxNo){
            maxNo = arr[i];
        }
        if(arr[i]<minNo){
            minNo = arr[i];
        }
    }
    cout<<maxNo<<" "<<minNo;
    return 0;
}
